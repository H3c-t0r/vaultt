<div class="chart-wrapper stacked-charts">
  <div class="single-chart-grid">
    <div class="chart-header has-bottom-margin-xl">
      <h2 class="chart-title">Secrets sync usage</h2>
      <p class="chart-description">
        This data can be used to understand how many secrets sync clients have been used for this date range. A secret with a
        configured sync destination would qualify as a unique and active client.
      </p>
    </div>

    <div class="chart-container-wide">
      <Clients::Charts::VerticalBarBasic
        @chartTitle="Secrets sync usage"
        @data={{this.byMonthActivityData}}
        @yKey="secret_syncs"
        @chartHeight={{200}}
      />
    </div>

    <div class="chart-subTitle">
      <StatText
        @label="Total sync clients"
        @subText="The total number of secrets synced from Vault to other destinations during this date range."
        @value={{this.totalUsageCounts.secret_syncs}}
        @size="l"
      />
    </div>

    <div class="data-details-top has-top-padding-l" data-test-running-new-nonentity>
      <h3 class="data-details">Average sync clients per month</h3>
      <p class="data-details">
        {{format-number (this.average this.byMonthActivityData "secret_syncs")}}
      </p>
    </div>

    <div class="timestamp" data-test-running-total-timestamp>
      {{#if @responseTimestamp}}
        Updated
        {{date-format @responseTimestamp "MMM d yyyy, h:mm:ss aaa" withTimeZone=true}}
      {{/if}}
    </div>
  </div>
</div>