<Hds::Form::TextInput::Field
  ...attributes
  @value={{@value}}
  @isRequired={{@isRequired}}
  @isValid={{this.isValid}}
  readonly={{@readonly}}
  name={{@name}}
  {{on "change" this.handleChange}}
  as |F|
>
  <F.Label>{{@label}}</F.Label>
  {{#if (has-block "helperText")}}
    <F.HelperText>{{yield to="helperText"}}</F.HelperText>
  {{/if}}
</Hds::Form::TextInput::Field>