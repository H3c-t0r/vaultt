<HcNav::Nav as |Nav|>
  <Nav.Link @route="vault.cluster" @current-when={{false}} @icon="arrow-left" data-test-sidebar-nav-link="back main">
    Back to main navigation
  </Nav.Link>

  <Nav.Header>Tools</Nav.Header>

  {{#each (tools-actions) as |supportedAction|}}
    {{#if (has-permission "tools" routeParams=supportedAction)}}
      <Nav.Link @route="vault.cluster.tools.tool" @model={{supportedAction}} data-test-sidebar-nav-link={{supportedAction}}>
        {{capitalize supportedAction}}
      </Nav.Link>
    {{/if}}
  {{/each}}
</HcNav::Nav>