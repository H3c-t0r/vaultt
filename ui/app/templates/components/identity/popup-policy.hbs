{{#popup-menu name="policy-menu"}}
  <nav class="menu">
    <ul class="menu-list">
      <li class="action">
        {{#link-to "vault.cluster.policy.show" "acl" policyName}}
          View Policy
        {{/link-to}}
      </li>
      <li class="action">
        {{#link-to "vault.cluster.policy.edit" "acl" policyName}}
          Edit Policy
        {{/link-to}}
      </li>
      <li class="action">
        <ConfirmAction
          @buttonClasses="link is-destroy"
          @confirmButtonText="Remove"
          @onConfirmAction={{concat "Are you sure you want to remove " policyName "?"}}
          @confirmMessage={{concat "Are you sure you want to remove " policyName "?"}}
        >
          Remove from {{model.identityType}}
        </ConfirmAction>
      </li>
    </ul>
  </nav>
{{/popup-menu}}
