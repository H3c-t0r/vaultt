{{#if componentName}}
  {{component componentName item=item }}
{{else if linkParams}}
  <LinkedBlock @params={{linkParms}} @class="list-item-row">
    <div class="columns is-mobile">
      <div class="column is-10">
        {{yield item}}
      </div>
      <div class="column has-text-right">
        {{#if hasBlock}}
          {{yield (hash menu=(component "list-item/popup-menu" item=item))}}
        {{/if}}
      </div>
    </div>
  </LinkedBlock>
{{else}}
  <div class="list-item-row">
    <div class="columns is-mobile">
      <div class="column is-10">
        {{yield item}}
      </div>
      <div class="column has-text-right">
        {{#if hasBlock}}
          {{yield (hash menu=(component "list-item/popup-menu" item=item))}}
        {{/if}}
      </div>
    </div>
  </div>
{{/if}}

