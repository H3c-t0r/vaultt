<div class="progress-container">
  <ICon class="feature-check completed-check" @glyph="check-circle-fill" @size="24" @excludeIconClass={{true}}/>
  {{#each progressBar as |bar|}}
    <div class="feature-progress-container">
      <span class="progress-bar">
        <span class="feature-progress" style={{bar.style}}></span>
      </span>
      {{#if bar.showIcon}}
        <ICon class="feature-check {{if bar.completed 'completed-check' 'incomplete-check'}}" @glyph="check-circle-fill" @size="24" @excludeIconClass={{true}}/>
      {{/if}}
    </div>
  {{/each}}
</div>
