<PageHeader as |p|>
  <p.top>
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li>
          <span class="sep">&#x0002f;</span>
          <LinkTo @route="vault.cluster.access.oidc.assignments">
            Assignments
          </LinkTo>
        </li>
      </ul>
    </nav>
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{@model.name}}
    </h1>
  </p.levelLeft>
</PageHeader>

<div class="tabs-container box is-sideless is-fullwidth is-paddingless is-marginless">
  <nav class="tabs" aria-label="tabs">
    <ul>
      <LinkTo @route="vault.cluster.access.oidc.assignments.assignment.details" @model={{@model}}>
        Details
      </LinkTo>
    </ul>
  </nav>
</div>

<Toolbar>
  <ToolbarActions>
    {{#if @model.canDelete}}
      <ConfirmAction
        @buttonClasses="toolbar-link"
        @onConfirmAction={{this.delete}}
        @confirmTitle="Delete assignment?"
        @confirmMessage="This assignment will be permanently deleted. You will not be able to recover it."
        @confirmButtonText="Delete"
      >
        Delete assignment
      </ConfirmAction>
    {{/if}}
    {{#if @model.canEdit}}
      <ToolbarLink @params={{array "vault.cluster.access.oidc.assignments.assignment.edit" @model.name}}>
        Edit assignment
      </ToolbarLink>
    {{/if}}
  </ToolbarActions>
</Toolbar>

<div class="box is-fullwidth is-sideless is-paddingless is-marginless">
  <InfoTableRow @label="Name" @value={{@model.name}} />
  <InfoTableRow
    @type="array"
    @value={{@model.entityIds}}
    @model={{@model}}
    @isLink={{true}}
    @label="Entities"
    @modelType="oidc/assignment"
    @viewAll="entities."
    @rootRoute={{(array "vault.cluster.access.identity.index" "entities")}}
    @itemRoute={{(array "vault.cluster.access.identity.show" "entities" "details")}}
    @alwaysRender={{true}}
  />
  <InfoTableRow
    @type="array"
    @value={{@model.groupIds}}
    @model={{@model}}
    @isLink={{true}}
    @label="Groups"
    @modelType="oidc/assignment"
    @viewAll="groups."
    @rootRoute={{(array "vault.cluster.access.identity.index" "groups")}}
    @itemRoute={{(array "vault.cluster.access.identity.show" "groups" "details")}}
    @alwaysRender={{true}}
  />
</div>