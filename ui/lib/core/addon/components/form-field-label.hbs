{{#if @label}}
  <label class="is-label" ...attributes>
    {{@label}}
    {{#if @helpText}}
      <InfoTooltip>
        <span data-test-help-text>{{@helpText}}</span>
      </InfoTooltip>
    {{/if}}
  </label>
{{/if}}
{{#if @subText}}
  <p class="sub-text" data-test-label-subtext>
    {{@subText}}
    {{#if @docLink}}
      <DocLink @path={{@docLink}}>
        Learn more
      </DocLink>
    {{/if}}
  </p>
{{/if}}