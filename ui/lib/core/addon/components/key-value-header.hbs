<Hds::Breadcrumb>
  {{#each this.secretPath as |path index|}}
    {{#if this.linkToPaths}}
      <Hds::Breadcrumb::Item
        @text={{path.text}}
        @route={{path.path}}
        @model={{path.model}}
        data-test-secret-root-link={{if (eq index 0) true false}}
        data-test-secret-breadcrumb={{path.text}}
      />
    {{else}}
      <Hds::Breadcrumb::Item @text={{path.text}} @current={{true}} />
    {{/if}}
  {{/each}}
</Hds::Breadcrumb>