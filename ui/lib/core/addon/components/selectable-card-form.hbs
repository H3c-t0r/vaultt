<form class="selectable-card is-rounded no-flex" data-test-selectable-card-form={{@testLabel}}>
  <div class="is-flex-between is-fullwidth card-details">
    <h3 class="title is-5">{{@title}}</h3>
  </div>
  <div class="has-top-bottom-margin">
    <p class="sub-text">{{@subText}}</p>
  </div>

  <div class="is-flex">
    <SearchSelect
      class="is-flex-1"
      @selectLimit="1"
      @models={{@models}}
      @backend={{@backend}}
      @fallbackComponent="input-search"
      @onChange={{this.handleInput}}
      @placeholder={{@placeholder}}
      data-test-selectable-card-form-input={{@testLabel}}
    />
    <button
      type="button"
      class="button is-secondary has-left-margin-s"
      disabled={{this.buttonDisabled}}
      {{on "click" this.transitionToPage}}
      data-test-selectable-card-form-button={{@testLabel}}
    >
      {{@buttonText}}
    </button>
  </div>
</form>