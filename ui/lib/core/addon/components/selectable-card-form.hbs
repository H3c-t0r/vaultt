<form class="selectable-card is-rounded no-flex" data-test-selectable-card-form={{@testName}}>
  <div class="is-flex-between is-fullwidth card-details">
    <h3 class="title is-5">{{@title}}</h3>
  </div>
  <div class="has-top-bottom-margin">
    <p class="sub-text">{{@subText}}</p>
  </div>

  <SearchSelect
    class="is-flex-1"
    @selectLimit="1"
    @options={{@options}}
    @fallbackComponent="input-search"
    @onChange={{this.handleInput}}
    @placeholder={{@placeholder}}
    @navigateToPage={{@navigateToPage}}
    data-test-selectable-card-form-input={{@testName}}
  />
  <button
    type="button"
    class="button is-secondary"
    disabled={{this.buttonDisabled}}
    {{on "click" this.transitionToPage}}
    data-test-selectable-card-form-button={{@testName}}
  >
    {{@buttonText}}
  </button>
</form>