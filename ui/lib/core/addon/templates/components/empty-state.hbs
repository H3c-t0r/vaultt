<div data-test-component="empty-state" class="empty-state" ...attributes>
  <div class="empty-state-content">
    {{#if this.icon}}
      <div class="empty-state-icon">
        <Icon @glyph={{this.icon}} @size="xxl" />
        <h3 class="empty-state-title" data-test-empty-state-title>
          {{this.title}}
        </h3>
      </div>
      {{#if this.subTitle}}
        <p class="empty-state-subTitle" data-test-empty-state-subText>
          {{this.subTitle}}
        </p>
      {{/if}}
    {{else}}
    <h3 class="empty-state-title" data-test-empty-state-title>
      {{this.title}}
    </h3>
    {{#if this.subTitle}}
      <p class="empty-state-subTitle" data-test-empty-state-subText>
        {{this.subTitle}}
      </p>
    {{/if}}
    {{/if}}
    {{#if this.message}}
    <p class={{concat "empty-state-message" (if this.bottomBorder " has-border-bottom-light")}} data-test-empty-state-message>
      {{message}}
    </p>
    {{/if}}
    {{#if (has-block)}}
      <div class="empty-state-actions">
        {{yield}}
      </div>
    {{else if this.emptyActions}}
      <div class="empty-state-actions">
        {{component this.emptyActions}}
      </div>
    {{/if}}
  </div>
</div>
