{{#if (or alwaysRender value)}}
  <div class="column is-one-quarter">
    <span class="is-label has-text-grey-dark" data-test-row-label="{{label}}">{{label}}</span>
  </div>
  <div class="column is-flex">
    {{#if (has-block)}}
      {{yield}}
    {{else if (eq valueType "boolean")}}
      {{#if value}}
        <Icon aria-hidden="true" class="icon-true" @size="l" @glyph="check-circle-outline" /> Yes
      {{else}}
        <Icon aria-hidden="true" class="icon-false" @size="l" @glyph="cancel-circle-outline" /> No
      {{/if}}
    {{else}}
      {{#if value}}
        <code class="is-word-break has-text-black" data-test-row-value="{{label}}">{{value}}</code>
      {{else}}
        {{#if (eq valueType "array")}}
          <code class="is-word-break has-text-black" data-test-row-value="{{label}}">[]</code>
        {{else}}
          <code class="is-word-break has-text-black" data-test-row-value="{{label}}">{}</code>
        {{/if}}
      {{/if}}
    {{/if}}
  </div>
{{/if}}