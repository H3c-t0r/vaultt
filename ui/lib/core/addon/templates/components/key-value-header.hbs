<ul>
  {{yield}}
  {{#each this.secretPath as |path index|}}
    <li class={{if (is-active-route path.path path.model isExact=true) "is-active"}}>
      <span class="sep">&#x0002f;</span>
      {{#if (and this.linkToPaths (not this.isEngine))}}
        {{! Ember Engines cannot use the LinkTo for routes that are not within their engine. }}
        <LinkTo
          @route={{path.path}}
          @model={{path.model}}
          data-test-secret-root-link={{if (eq index 0) true false}}
          data-test-secret-breadcrumb={{path.text}}
        >
          {{path.text}}
        </LinkTo>
      {{else}}
        <span>{{path.text}}</span>
      {{/if}}
    </li>
  {{/each}}
</ul>