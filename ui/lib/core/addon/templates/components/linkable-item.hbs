<div ...attributes>
  {{#if @disabled}}
    <div class="list-item-row linkable-item text-decoration-none">
      {{yield (hash content=(component "linkable-item/content"))}}
      {{yield (hash menu=(component "linkable-item/menu"))}}
    </div>
  {{else}}
    <LinkedBlock
      @params={{array @link.route @link.model}}
      class="list-item-row linkable-item text-decoration-none"
      data-test-auth-backend-link={{@link.model}}
    >
      {{yield (hash content=(component "linkable-item/content"))}}
      {{yield (hash menu=(component "linkable-item/menu"))}}
    </LinkedBlock>
  {{/if}}
</div>