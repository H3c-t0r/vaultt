{{#if this.displayErrors}}
  {{#each this.displayErrors as |error|}}
    <Hds::Alert data-test-message-error class="has-top-margin-s has-bottom-margin-s" @type="inline" @color="critical" as |A|>
      <A.Title>Error</A.Title>
      <A.Description data-test-message-error-description>{{error}}</A.Description>
    </Hds::Alert>
  {{/each}}
{{/if}}