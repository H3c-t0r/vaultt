<BasicDropdown
  renderInPlace={{renderInPlace}}
  verticalPosition={{verticalPosition}}
  horizontalPosition={{horizontalPosition}}
  matchTriggerWidth={{matchTriggerWidth}}
  triggerComponent={{triggerComponent}}
  contentComponent={{contentComponent}}
  calculatePosition={{calculatePosition}}
  onOpen={{onOpen}}
  onClose={{onClose}}
  onFocus={{onFocus}}
  calculateInPlacePosition={{calculateInPlacePosition}}
  {{on 'mousedown' this.prevent}}
  {{on 'mouseenter' (fn this.open dd)}}
  {{on 'mouseleave' (fn this.closeLater dd)}}
as |dd|>
  {{yield (assign
    dd
    (hash
      trigger=(component dd.trigger
        onMouseDown=(action "prevent")
        onMouseEnter=(action "open")
        onMouseLeave=(action "close")
      )
      content=(component dd.content
        onMouseEnter=(action "open")
        onMouseLeave=(action "close")
      )
    )
  )}}
</BasicDropdown>