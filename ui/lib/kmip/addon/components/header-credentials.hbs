<PageHeader as |p|>
  <p.top>
    <KmipBreadcrumb @scope={{this.scope}} />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{this.role}}
    </h1>
  </p.levelLeft>
</PageHeader>
<div class="tabs-container box is-sideless is-fullwidth is-paddingless is-marginless">
  <nav class="tabs">
    <ul>
      <LinkTo @route="credentials.index" @models={{array this.scope this.role}} data-test-kmip-link-credentials="true">
        Credentials
      </LinkTo>
      <LinkTo @route="role" @models={{array this.scope this.role}} data-test-kmip-link-role-details="true">
        Details
      </LinkTo>
    </ul>
  </nav>
</div>