<PageHeader as |p|>
  <p.levelLeft>
    <h1 class="title is-3">
      Credentials
    </h1>
  </p.levelLeft>
</PageHeader>
<Toolbar>
  <ToolbarActions>
    <ToolbarLink
      @params={{array "credentials.index" this.scope this.role}}
    >
      Back to role
    </ToolbarLink>

    <CopyButton
      class="toolbar-link"
      @clipboardText={{model.certificate}}
      @success={{action (set-flash-message "Certificate Copied!")}}
      data-test-copy-button
    >
      Copy certificate
      <Chevron />
    </CopyButton>
  </ToolbarActions>
</Toolbar>
<div class="box is-fullwidth is-sideless">
  <FieldGroupShow @model={{model}} @showAllFields={{false}} />
</div>
