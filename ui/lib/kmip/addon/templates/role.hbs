<HeaderCredentials @role={{this.role}} @scope={{this.scope}} />
<Toolbar>
  <ToolbarActions>
    <ToolbarLink
      @params={{array "role.edit" this.scope this.role}}
    >
      Edit role
    </ToolbarLink>
  </ToolbarActions>
</Toolbar>
<div class="box is-fullwidth is-sideless">
  <h3 class="title is-5">
    Allowed operations
  </h3>
  {{#each model.allowedOperations as |attr|}}
    {{info-table-row label=(titleize (humanize (dasherize attr))) value=true}}
  {{/each}}
</div>
