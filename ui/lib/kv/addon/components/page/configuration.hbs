<KvPageHeader @breadcrumbs={{@breadcrumbs}} @isEngineView={{true}} @pageTitle={{@config.id}}>
  <:tabLinks>
    <LinkTo @route="list" data-test-secrets-tab="Secrets">Secrets</LinkTo>
    <LinkTo @route="configuration" data-test-secrets-tab="Configuration">Configuration</LinkTo>
  </:tabLinks>
</KvPageHeader>

<div class="box is-fullwidth is-sideless is-paddingless is-marginless">
  {{#each @config.attrs as |attr|}}
    {{#if (eq attr.type "object")}}
      <InfoTableRow
        @alwaysRender={{not (is-empty-value (get @config attr.name))}}
        @label={{or attr.options.label (to-label attr.name)}}
        @value={{stringify (get @config (or attr.options.fieldValue attr.name))}}
      />
    {{else}}
      <InfoTableRow
        @alwaysRender={{and (not (is-empty-value (get @config attr.name))) (not-eq attr.name "version")}}
        @formatTtl={{eq attr.options.editType "ttl"}}
        @label={{or attr.options.label (to-label attr.name)}}
        @value={{get @config (or attr.options.fieldValue attr.name)}}
      />
    {{/if}}
  {{/each}}
</div>