<PageHeader as |p|>
  <p.top>
    {{! TODO: This should be replaced with HDS::Breadcrumbs }}
    <nav class="breadcrumb" aria-label="breadcrumbs" data-test-breadcrumbs="key-details">
      <ul>
        <li>
          <span class="sep">/</span>
          <LinkToExternal @route="secrets">secrets</LinkToExternal>
        </li>
        {{#each this.breadcrumbs as |breadcrumb|}}
          <li>
            <span class="sep">/</span>
            {{#if (and breadcrumb.path (not breadcrumb.isCurrentPage))}}
              <LinkTo @route={{breadcrumb.path}}>
                {{breadcrumb.label}}
              </LinkTo>
            {{else}}
              {{breadcrumb.label}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </nav>
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3" data-test-key-details-title>
      {{#if @icon}}
        <Icon @name={{@icon}} @size="24" class="has-text-grey-light" />
      {{/if}}
      {{#if @pageTitle}}
        {{@pageTitle}}
      {{/if}}
    </h1>
  </p.levelLeft>
</PageHeader>