{{#if this.showSecretListHeader}}
  <SecretListHeader
    @model={{this.model}}
    @backendCrumb={{hash
      label=this.model.id
      text=this.model.id
      path="vault.cluster.secrets.backend.list-root"
      model=this.model.id
    }}
    @isEngine={{true}}
  />
{{else}}
  <PageHeader as |p|>
    <p.top>
      <KeyValueHeader
        @baseKey={{@baseKey}}
        @root={{hash
          label=this.model.id
          text=this.model.id
          path="vault.cluster.secrets.backend.pki.roles.index"
          model=this.model.id
        }}
        @isEngine={{true}}
      >
        <li>
          <span class="sep">
            /
          </span>
          <LinkTo @route="roles.index">
            {{this.model.id}}
          </LinkTo>
        </li>
      </KeyValueHeader>
    </p.top>
    <p.levelLeft>
      <h1 class="title is-3">
        Create a PKI role
      </h1>
    </p.levelLeft>
  </PageHeader>
{{/if}}
{{outlet}}