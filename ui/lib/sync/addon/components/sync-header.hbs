<PageHeader as |p|>
  <p.top>
    <Page::Breadcrumbs @breadcrumbs={{or @breadcrumbs (array (hash label="Secrets Sync"))}} />
  </p.top>

  <p.levelLeft>
    <h1 class="title is-3 has-bottom-margin-m" data-test-page-title>
      {{#if @icon}}
        <Icon @name={{@icon}} @size="24" />
      {{/if}}
      {{@title}}
      {{#unless (includes this.version.features "secrets sync")}}
        <Hds::Badge @text={{this.badgeTitle}} @color="highlight" @size="large" />
      {{/unless}}
    </h1>
  </p.levelLeft>

  <p.levelRight>
    {{yield to="actions"}}
  </p.levelRight>
</PageHeader>