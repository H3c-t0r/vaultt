<PageHeader as |p|>
  <p.top>
    {{#if @breadcrumbs}}
      <Page::Breadcrumbs @breadcrumbs={{@breadcrumbs}} />
    {{else}}
      Secrets sync
    {{/if}}
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3" data-test-page-title>
      {{#if @icon}}
        <Icon @name={{@icon}} @size="24" />
      {{/if}}
      {{@title}}
      {{#if (is-version "OSS")}}
        <Hds::Badge @text="Enterprise feature" @color="highlight" @size="large" />
      {{/if}}
    </h1>
  </p.levelLeft>
</PageHeader>