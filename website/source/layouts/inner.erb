<% wrap_layout :layout do %>
	<aside id="secondary-nav" class="light" role="navigation">
		<div class="g-container">
			<ul class="breadcrumbs">
				<li>Docs</li>
				<li class="active">Vault</li>
			</ul>
			<ul class="doc-links">
				<li <%= sidebar_current("intro") %>>
					<a href="/intro">Intro</a>
				</li>
				<li <%= sidebar_current("guides") %>>
					<a href="/guides">Guides</a>
				</li>
				<li <%= sidebar_current("docs") %>>
					<a href="/docs">Docs</a>
				</li>
				<li <%= sidebar_current("api") %>>
					<a href="/api">API</a>
				</li>
				<li <%= sidebar_current("download") %>>
					<a href="/downloads.html">
						<%= inline_svg "download.svg" %> Download
					</a>
				</li>
			</ul>
		</div>
	</aside>
	<div class="content-wrap">
		<div id="sidebar" role="complementary">
			<div class="nav-toggle">
				<%= inline_svg "feather/icon_list-menu.svg", width: 24 %>
				<%= inline_svg "feather/icon_chevron-up.svg", width: 24 %>
			</div>
			<%= yield_content :sidebar %>
			<div class="underlay"></div>
		</div>

		<div id="inner" class="g-container" role="main">
			<%= yield %>
		</div>
	</div>
<% end %>
